<div class="btn-group">
<%= link_to "Edit Post","/editor"+ request.path, id: "edit_link", data:{save_url: mercury_update_post_path(@post)}, :class => "btn" %>
</div>
<br/>
<br/>
	<p>
	<span class="label label-default">Title :</span>
	   <span id="post_title" class="mercury-region" data-type="editable"><%= raw @post.title %> </span>
	</p>
	<p>
	   <span class="label label-success">Text :</span>
	   <div id="post_text" class="mercury-region" data-type="editable"><%= raw @post.text %> </div>
	</p>

	<h4>Comments</h4>
	<%= render @post.comments %>

	<h4>Add a comment:</h4>
	<%= render "comments/form" %>
<div class="btn-group">
<%= link_to 'Back', posts_path, :class => "btn" %>
| <%= link_to 'Edit', edit_post_path(@post), :class => "btn" %>
</div>
